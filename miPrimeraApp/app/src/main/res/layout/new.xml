<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Campo para ingresar el número -->
    <EditText
        android:id="@+id/etNumeroFactorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingresa un número"
        android:inputType="number"
        android:minHeight="48dp"
        android:ems="10" />

    <!-- Botón para calcular el factorial -->
    <Button
        android:id="@+id/btnCalcularFactorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Calcular Factorial" />

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/tvResultadoFactorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:text="Resultado aparecerá aquí" />

</LinearLayout>
